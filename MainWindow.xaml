        <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Text="?" VerticalAlignment="Center" Width="100" Height="48" TextAlignment="Center" LineHeight="36" FontSize="36" MouseDown="TextBlock_MouseDown"/>
