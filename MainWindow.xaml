        <TextBlock Grid.Column="3" Grid.Row="3" HorizontalAlignment="Center" Text="?" VerticalAlignment="Center" Width="100" Height="48" TextAlignment="Center" LineHeight="36" FontSize="36" MouseDown="TextBlock_MouseDown"/>
